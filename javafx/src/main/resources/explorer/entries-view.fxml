<?import javafx.scene.control.TableView ?>
<?import javafx.scene.control.TableColumn ?>
<?import javafx.scene.control.Label ?>
<?import javafx.scene.control.cell.PropertyValueFactory ?>

<TableView xmlns:fx="http://javafx.com/fxml" minWidth="320" stylesheets="@style.css">
	<columns>
		<TableColumn minWidth="36" maxWidth="36" reorderable="false" resizable="false" sortable="false">
			<cellValueFactory>
				<PropertyValueFactory property="icon" />
			</cellValueFactory>
		</TableColumn>
		
		<TableColumn minWidth="120" reorderable="false" text="Nazwa">
			<cellValueFactory>
				<PropertyValueFactory property="name" />
			</cellValueFactory>
		</TableColumn>
		
		<TableColumn minWidth="120" reorderable="false" text="Rozmiar">
			<cellValueFactory>
				<PropertyValueFactory property="size" />
			</cellValueFactory>
		</TableColumn>
	</columns>
	
	<columnResizePolicy>
		<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
	</columnResizePolicy>
	
